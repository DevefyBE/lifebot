{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": false,
        "lib": [
            "es5",
            "es6",
            "dom",
            "dom.iterable"
        ],
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}